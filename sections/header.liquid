<header class="site-header" role="banner">
  <div class="container header-inner">
    <div class="logo">
      {% if section.settings.logo != blank %}
        <img src="{{ section.settings.logo | img_url: '200x' }}" alt="{{ shop.name }}" loading="lazy" />
      {% else %}
        {{ section.settings.logo_text | default: shop.name }}
      {% endif %}
    </div>
    <nav class="nav" role="navigation" aria-label="Main navigation">
      {% for block in section.blocks %}
        {% if block.type == 'nav_link' %}
          <a href="{{ block.settings.link }}" {{ block.shopify_attributes }}>
            {{ block.settings.label }}
          </a>
        {% endif %}
      {% endfor %}
    </nav>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Logo image"
    },
    {
      "type": "text",
      "id": "logo_text",
      "label": "Logo text",
      "default": "Portfolio"
    }
  ],
  "blocks": [
    {
      "type": "nav_link",
      "name": "Navigation link",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Link label",
          "default": "Home"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL",
          "default": "/"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Header",
      "blocks": [
        {
          "type": "nav_link",
          "settings": {
            "label": "About",
            "link": "#about"
          }
        },
        {
          "type": "nav_link",
          "settings": {
            "label": "Skills",
            "link": "#skills"
          }
        },
        {
          "type": "nav_link",
          "settings": {
            "label": "Projects",
            "link": "#projects"
          }
        },
        {
          "type": "nav_link",
          "settings": {
            "label": "Contact",
            "link": "#contact"
          }
        }
      ]
    }
  ]
}
{% endschema %}