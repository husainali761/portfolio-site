<section id="about" class="section">
  <div class="container">
    {% if section.settings.heading != blank %}
      <h2>{{ section.settings.heading }}</h2>
    {% endif %}
    
    {% if section.settings.content != blank %}
      <div class="about-content">
        {{ section.settings.content }}
      </div>
    {% endif %}
    
    {% if section.settings.image != blank %}
      <div class="about-image">
        <img 
          src="{{ section.settings.image | img_url: '800x' }}" 
          alt="{{ section.settings.image.alt | default: section.settings.heading }}"
          loading="lazy"
          width="800"
          height="auto"
        />
      </div>
    {% endif %}
  </div>
</section>

{% schema %}
{
  "name": "About",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "About"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Content",
      "default": "<p>Sr Shopify Liquid Developer focused on creating clean, modular themes inspired by production-grade skeletons. Comfortable working with sections, snippets, metafields, and performance-focused storefronts.</p>"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image (optional)"
    }
  ],
  "presets": [
    {
      "name": "About"
    }
  ]
}
{% endschema %}