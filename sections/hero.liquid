<section class="hero" id="{{ section.id }}">
  <div class="container hero-inner">
    <div class="hero-content">
      {% if section.settings.eyebrow != blank %}
        <p class="eyebrow">{{ section.settings.eyebrow }}</p>
      {% endif %}
      
      {% if section.settings.heading != blank %}
        <h1>{{ section.settings.heading }}</h1>
      {% endif %}
      
      {% if section.settings.description != blank %}
        <p class="hero-text">{{ section.settings.description }}</p>
      {% endif %}
      
      {% if section.settings.cta_text != blank and section.settings.cta_link != blank %}
        <a class="btn-primary" href="{{ section.settings.cta_link }}">
          {{ section.settings.cta_text }}
        </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "text",
      "id": "eyebrow",
      "label": "Eyebrow text",
      "default": "Sr Shopify Liquid Developer"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Build Better Shopify Experiences"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "Specialized in building fast, maintainable, and scalable Shopify themes using Liquid, modern frontend practices, and Shopify best standards."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button text",
      "default": "View Work"
    },
    {
      "type": "url",
      "id": "cta_link",
      "label": "Button link",
      "default": "#projects"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#f8f9fa"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}

{% stylesheet %}
  .hero {
    background-color: {{ section.settings.background_color }};
    padding: 80px 0;
    min-height: 60vh;
    display: flex;
    align-items: center;
  }
{% endstylesheet %}